{
  "compilerOptions": {
    "diagnostics": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "./build/ts2js/",
    "listFiles": true,
    "outFile": "./build/tsc.all.js",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "grunt",
    "hooks",
    "lib",
    "build"
  ]
}
