{
  "compilerOptions": {
    "diagnostics": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noEmitHelpers": false,
    "outDir": "./build/ts2js/",
    "listFiles": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "grunt",
    "hooks",
    "lib",
    "build"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ]
}
