<?xml version='1.0' encoding='utf-8'?>
<widget  xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id="org.ayso4u.schedules"
         version="2.0.0"
         versionCode="200">
    <name>AysoKS</name>
    <description>
        An app to view schedule information for Wichita-area AYSO regions.
    </description>
    <author href="http://github.com/s42ky/" email="sky42ks@gmail.com">
        Scott Yeskie
    </author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />

    <access origin="http://ayso4u.org" />
    <access origin="https://twitter.com" subdomains="true" browserOnly="true" />
    <access origin="http://*.google.com" />
    <access origin="https://*.google.com" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
