<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
		id="org.ayso4u.aysoks"
		version="1.0.0"
		versionCode="100">
	
	<name>AYSO KS</name>
	
	<description>
		An app to view schedule information for Wichita-area AYSO regions.
	</description>
	
	<author href="http://github.com/s42ky/" email="sky42ks@gmail.com">
        Scott Yeskie
    </author>

	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="handset" />
	<preference name="ios-statusbarstyle" value="black-opaque" />
	
	<feature name="http://api.phonegap.com/1.0/network" />
	<feature name="http://api.phonegap.com/1.0/device" />
	
	<access origin="http://ayso4u.org" />
	<access origin="https://twitter.com" subdomains="true" browserOnly="true" />
	<access origin="http://google.com" subdomains="true" browserOnly="true" />
	
	<icon src="res/icon-ios.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon-retina.png" gap:platform="ios" width="114" height="114" />
	<icon src="res/icon-ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="res/icon-mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="res/icon-hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="res/icon-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	
	<gap:splash src="splash.png" />
	<gap:splash src="res/splash-mdpi.png" width="320" height="480" />
    <gap:splash src="res/splash-retina.png" width="640" height="960" />
    <gap:splash src="res/splash-retina5.png" width="640" height="1136" />
    <gap:splash src="res/splash-ldpi.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="res/splash-mdpi.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="res/splash-hdpi.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="res/splash-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
</widget>