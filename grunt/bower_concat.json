{
  "options": {
    "dependencies": {
      "angular-local-storage": "angular"
    },
    "separator": ";\n"
  },

  "all": {
    "dest": "build/_bower.js",
    "cssDest": "build/_bower.css",
    "exclude": [
      "jquery-mobile",
      "ngCordova"
    ],
    "mainFiles": {
      "iscroll": "build/iscroll.js"
    },
    "includeDev": true
  },

  "dev": {
    "dest": "build/_bower.dev.js",
    "exclude": [
      "jquery-mobile"
    ],
    "mainFiles": {
      "iscroll": "build/iscroll.js",
      "ngCordova": ["dist/ng-cordova.js", "dist/ng-cordova-mocks.js"]
    },
    "includeDev": true
  }
}
