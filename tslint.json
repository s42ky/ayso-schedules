{
  "rules": {
    "member-ordering": [
      true,
      "static-before-instance",
      "variables-before-functions",
      "public-before-private"
    ],
    "no-inferrable-types": true,
    "typedef": [
      "call-signature",
      "member-variable-declaration"
    ],
    "typedef-whitespace": "space",

    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unreachable": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": true,

    "eofline": true,
    "indent": "spaces",
    "max-line-length": 120,
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],

    "class-name": true,
    "jsdoc-format": true,
    "no-consecutive-blank-lines": true,
    "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": true,
    "whitespace": [ true,
      "check-decl", "check-operator", "check-module", "check-separator", "check-typecast"
    ]

  },

  "Possible to add later, but would require a lot of changes": {
    "url": "http://palantir.github.io/tslint/rules/",

    "member-access": [
      true,
      "check-accessor",
      "check-constructor"
    ],
    "no-any": true,
    "object-literal-sort-keys": true,
    "typedef": [
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],

    "align": [true, "parameters", "arguments", "statements"],
    "interface-name": "would require major refactor, but probably better convention",
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "whitepace": [ true,
      "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast"
    ],

    "no-null-keyword": true

  }
}
